<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wash & Go!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">

    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

    <style>
        .navbar-inverse {
            background-color: #003359;
            border-color: transparent;
            padding: 0.5%;
            background-size: 2000px 400px;
        }

        .navbar-nav {
            float: left;
            margin: 1.3%;
        }

            .navbar-inverse .navbar-nav > li > a {
                color: white;
                font-family: 'Roboto','Heebo',Arial,sans-serif;
                font-size: 16px;
            }

            .navbar-inverse .navbar-nav > li:hover > a {
                color: white;
                font-weight: bold;
            }

            .navbar-inverse .navbar-brand {
                color: white;
                font-family: 'Roboto','Heebo',Arial,sans-serif;
            }

        footer {
            padding: 5%;
            background-color: #1f1f1f;
        }

        a {
            color: white;
            text-decoration: none;
        }
        a:hover {
            color: white;
            text-decoration: none;
        }

    </style>

    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="/" class="navbar-left"><img style="width:150px;" src="~/img/logo.png"/></a>

                @*@Html.ActionLink("Wash & Go!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li><a href="#quienesSomosTitle">Quiénes Somos</a></li>
                    <li><a href="/#!/solicitarlavado">Cruzados</a></li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content" ng-app="app">

        @RenderBody()
        <hr />
        <footer style="padding-top:3%;">

            <div class="container col-md-12">
                <div class="col-md-4">
                    <img src="~/img/logo fb.png" style="width:50px;margin-left:3%;"/>
                    <img src="~/img/logo ig.png" style="width:50px; margin-left:3%;" />
                </div>
                <div class="col-md-4 text-center">

                    <a href="https://api.whatsapp.com/send?phone=5491161434897"><img src="~/img/Whatsapp-botón.png" /></a>
                </div>
                
            </div>


            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-aria.min.js"></script>
    <script src="~/Scripts/angular-messages.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>



    <script src="~/SPA/Controllers/AppController.js"></script>
    <script src="~/SPA/Controllers/SolicitarLavadoController.js"></script>

    <script src="~/SPA/Services/SolicitarLavadoService.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>


</html>

