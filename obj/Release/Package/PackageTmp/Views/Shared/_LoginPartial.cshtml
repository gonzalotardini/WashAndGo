@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">



        <ul ng-app="app" ng-controller="generalController" class="nav navbar-nav navbar-right form-inline">
            <li><a class="text-center" style="padding-right:0;" ng-click="changeLanguage('es')"><span><img  src="~/img/Spanish.png" /></span></a></li>
            <li><a class="text-center" style="padding-left:0;" ng-click="changeLanguage('en')"><span><img  src="~/img/english.png" /></span></a></li>
            <li>
                @*@Html.ActionLink("Hello " + User.Identity.GetUserName()+ "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                @*@Html.ActionLink("Mi Cuenta", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@

                @if (User.IsInRole("Cliente"))
                {
                    <a href="/#!/cliente"><span class="glyphicon glyphicon-user"></span>{{ 'MI CUENTA' | translate }}</a>
                }
                else
                {
                    <a href="/#!/lavador"><span class="glyphicon glyphicon-user"></span>{{ 'MI CUENTA' | translate }}L</a>
                }


            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-off"></span>Log off</a></li>
        </ul>
    }
}
else
{
        <ul ng-app="app" ng-controller="generalController" class="nav navbar-nav navbar-right">
            @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink"})</li>*@
            @*<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= "glyphicon glyphicon-alert" })</li>*@

            <li><a class="text-center" style="padding-right:0;" ng-click="changeLanguage('es')"><span><img src="~/img/Spanish.png" /></span></a></li>
            <li><a class="text-center" style="padding-left:0;" ng-click="changeLanguage('en')"><span><img src="~/img/english.png" /></span></a></li>
            <li><a href="/account/register"><span class="glyphicon glyphicon-plus"></span> Register</a></li>
            <li><a href="/account/login"><span class="glyphicon glyphicon-log-in"></span>Log in</a></li>

        </ul>
}
